<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <record id="ir_rule_sale_order_multi_warehouse" model="ir.rule">
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="domain_force">['|',('warehouse_id','=',False),('warehouse_id','in',[x.id for x in user.warehouse_ids])]</field>
            <field name="name">Purchase Order Multi Warehouse</field>
            <field eval="1" name="global"/>
            <field eval="1" name="perm_unlink"/>
            <field eval="1" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="1" name="perm_create"/>
        </record>

        <record id="ir_rule_stock_warehouse_multi_warehouse" model="ir.rule">
            <field name="model_id" ref="stock.model_stock_warehouse"/>
            <field name="domain_force">[('id','in',[x.id for x in user.warehouse_ids])]</field>
            <field name="name">Stock Warehouse Multi Warehouse</field>
            <field eval="1" name="global"/>
            <field eval="1" name="perm_unlink"/>
            <field eval="1" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="1" name="perm_create"/>
        </record>

        <record id="ir_rule_stock_warehouse_multi_warehouse_manager" model="ir.rule">
            <field name="model_id" ref="stock.model_stock_warehouse"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="name">Stock Warehouse Multi Warehouse Manager</field>
            <field name="groups" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
            <field eval="1" name="perm_unlink"/>
            <field eval="1" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="1" name="perm_create"/>
        </record>
    </data>
</openerp>
